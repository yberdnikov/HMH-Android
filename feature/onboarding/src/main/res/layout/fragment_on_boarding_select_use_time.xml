<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.OnBoardingSelectUseTimeFragment">


    <TextView
        android:id="@+id/tv_onboarding_use_time_goal_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="30dp"
        android:lineSpacingExtra="6sp"
        android:text="@string/use_time_goal_title"
        android:textColor="?white_text"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_onboarding_use_time_goal_description"
        style="@style/TextAppearance.Hmh.BodyMedium"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="7dp"
        android:text="@string/use_time_goal_description"
        android:textColor="?gray2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_use_time_goal_title" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <NumberPicker
            android:id="@+id/np_onboarding_use_time_goal_hour"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:theme="@style/AppTheme.NumberPicker"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_onboarding_use_time_goal_unit1"
            style="@style/TextAppearance.Hmh.HeadlineSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:text="@string/all_hour"
            android:textColor="?gray2"
            app:layout_constraintBottom_toBottomOf="@+id/np_onboarding_use_time_goal_hour"
            app:layout_constraintStart_toEndOf="@+id/np_onboarding_use_time_goal_hour"
            app:layout_constraintTop_toTopOf="@+id/np_onboarding_use_time_goal_hour" />

        <NumberPicker
            android:id="@+id/np_onboarding_use_time_goal_minute"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:gravity="center_horizontal"
            android:theme="@style/AppTheme.NumberPicker"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_onboarding_use_time_goal_unit1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_onboarding_use_time_goal_unit2"
            style="@style/TextAppearance.Hmh.HeadlineSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:text="@string/all_minute"
            android:textColor="?gray2"
            app:layout_constraintBottom_toBottomOf="@+id/np_onboarding_use_time_goal_minute"
            app:layout_constraintStart_toEndOf="@+id/np_onboarding_use_time_goal_minute"
            app:layout_constraintTop_toTopOf="@+id/np_onboarding_use_time_goal_minute" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
