<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.OnBoardingSelectDataFragment">

    <TextView
        android:id="@+id/tv_onboarding_select_data_question"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="30dp"
        android:lineSpacingExtra="6sp"
        android:textColor="?white_text"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/onboarding_select_data_question" />

    <TextView
        android:id="@+id/tv_onboarding_select_data_description"
        style="?textAppearanceBodyMedium"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="7dp"
        android:textColor="?gray2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_onboarding_select_data_question"
        tools:text="@string/onboarding_select_data_description" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_onboarding_select_data_1"
            style="@style/TextAppearance.Hmh.TitleSmall"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="19dp"
            android:background="@drawable/selector_btn_data"
            android:gravity="center"
            android:textColor="?white_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_onboarding_select_data_2"
            style="@style/TextAppearance.Hmh.TitleSmall"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="19dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/selector_btn_data"
            android:gravity="center"
            android:textColor="?white_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_onboarding_select_data_1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_onboarding_select_data_3"
            style="@style/TextAppearance.Hmh.TitleSmall"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="19dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/selector_btn_data"
            android:gravity="center"
            android:textColor="?white_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_onboarding_select_data_2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_onboarding_select_data_4"
            style="@style/TextAppearance.Hmh.TitleSmall"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="19dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/selector_btn_data"
            android:gravity="center"
            android:textColor="?white_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_onboarding_select_data_3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
