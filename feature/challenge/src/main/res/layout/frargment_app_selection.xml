<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_searchbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/searchview_background"
        android:cursorVisible="true"
        android:drawableStart="@drawable/ic_search_24"
        android:drawablePadding="7dp"
        android:hint="@string/appselection_searchbar"
        android:paddingStart="17dp"
        android:textAppearance="?textAppearanceTitleSmall"
        android:textColor="?gray2"
        android:textColorHint="?gray2"
        android:textCursorDrawable="@drawable/drawable_cursor_color"
        app:layout_constraintBottom_toTopOf="@id/rv_app_selection"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_app_selection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_searchbar" />


</androidx.constraintlayout.widget.ConstraintLayout>
